---
import { Image } from 'astro:assets';

import discordImage from "../img/Hero/discord.png";
import doorImage from "../img/Hero/armored-door.png";
import tcImage from "../img/Hero/cupboard.png";

import AnimatedElement from './utils/AnimatedElement.jsx';
import ScrollButton from './utils/ScrollButton.astro';

const { serverId } = Astro.props;
---

<section id={serverId} class="relative flex items-center justify-center min-h-screen">
  <div class="absolute inset-0">
    <video
      src="/img/mainloot-montage-website.mp4"
      autoplay
      loop
      muted
      playsinline
      class="h-full w-full object-cover object-center"
    ></video>
  </div>
  <div class="absolute inset-0 bg-black opacity-70"></div>
  <AnimatedElement client:visible animationType="slideInRight" duration={0.9}>
    <div class="relative mx-auto flex max-w-3xl flex-col items-center px-4 py-16 text-center sm:py-32 sm:px-6 lg:py-48">
      <h1 class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-7xl text-shadow">
        One 
        <Image
          src={doorImage}
          alt="Mainloot"
          height={128}
          width={128}
          format="webp"
          loading="eager"
          class="inline-block h-20 w-20 sm:h-24 sm:w-24 lg:h-36 lg:w-36"
        /> 
        to 
        <Image
          src={tcImage}
          alt="Mainloot"
          height={128}
          width={128}
          format="webp"
          loading="eager"
          class="inline-block h-20 w-20 sm:h-24 sm:w-24 lg:h-36 lg:w-36"
        />!!!
      </h1>
      <p class="mt-4 text-lg text-white sm:text-2xl items-center flex-wrap text-shadow">
        <span class="block">
          We're a new rust focused discord channel. We strive to provide a high quality rust experience. Click below to take a tour.
        </span>
      </p>
      <a
        href="https://discord.gg/mainloot"
        class="mt-8 sm:mt-16 rounded-md bg-indigo-600 hover:bg-indigo-700 px-8 py-4 sm:px-12 sm:py-6"
      >
        <AnimatedElement client:visible animationType="scaleIn" duration={2}>
          <Image
            src={discordImage}
            alt="Mainloot"
            height={100}
            width={200}
            format="webp"
            loading="eager"
            class="inline-block w-40 sm:w-48 lg:w-56 h-auto mx-1"
          />
        </AnimatedElement>
      </a>
      <ScrollButton targetId="server-card" buttonId="hero" marginTop="mt-32" />
    </div>
  </AnimatedElement>
</section>

<style>
  .text-shadow {
    text-shadow: 3px 3px 2px rgba(0, 0, 0, 0.5);
  }
</style>