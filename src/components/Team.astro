---
import { Image } from "astro:assets";
import ScrollButton from "./utils/ScrollButton.astro";
import AnimatedElement from './utils/AnimatedElement.jsx';

interface Props {
  serverId: string;
  reverse?: boolean;
  nextServerId?: string;
  prevServerId?: string;
  animationDelay?: string;
}

import logoImage from "../img/mainloot.png";
import alberto from "../img/Team/alberto.png"
import decay from "../img/Team/decay.png"
import sleepy from "../img/Team/sleepy.png"
import fill from "../img/Team/empty.png"

const { serverId, nextServerId, prevServerId } = Astro.props;
---
<div id={serverId} class="bg-black py-24 sm:py-48">
  <div class="bg-red-100 bg-cover bg-center sm:py-32 bg-custom-bkgd">
    <div class="mx-auto grid max-w-6xl gap-x-20 gap-y-20 px-6 lg:px-8 xl:grid-cols-3">
      <div class="max-w-2xl">
        <h2>      
          <AnimatedElement client:visible animationType="slideInLeft" duration={1}>
            <Image
              src={logoImage}
              alt="Mainloot"
              format="webp"
              loading="lazy"
              class="icon h-12 w-auto"
            >
          </AnimatedElement>
        </h2>
          <AnimatedElement client:visible animationType="bounceIn" duration={1}>
            <p class="mt-6 text-lg leading-8 text-gray-200">Meet the team. If you're interested in becoming a member of the fam, hit us up on discord.</p>
          </AnimatedElement>
      </div>
      <ul role="list" class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2">
        <li>
          <AnimatedElement client:visible animationType="slideInBottom" duration={1}>
            <div class="flex items-center gap-x-6">
              <Image
                src={alberto}
                alt="Mainloot"
                format="webp"
                loading="lazy"
                class="h-24 w-24 rounded-full border-4 border-red-600"
              />
              <div>
                <h3 class="text-xl font-semibold leading-7 tracking-tight text-gray-400">Alberto</h3>
                <p class="text-sm font-bold leading-6 text-red-600">Admin</p>
                <p class="text-sm font-mono leading-6 text-white">Your BBQ sauce aficionado and code cowboy, if you see him in game you might be in trouble</p>
              </div>
            </div>
          </AnimatedElement>
        </li>
        <li>
          <AnimatedElement client:visible animationType="slideInTop" duration={1}>
            <div class="flex items-center gap-x-6">
              <Image
                src={decay}
                alt="Mainloot"
                format="webp"
                loading="lazy"
                class="h-24 w-24 rounded-full border-4 border-red-600"
              />
              <div>
                <h3 class="text-xl font-semibold leading-7 tracking-tight text-gray-400">Decay</h3>
                <p class="text-sm font-bold leading-6 text-red-600">Admin</p>
                <p class="text-sm font-mono leading-6 text-white">10K hours, rust is life. Grumpy old man. His steam account is probably older than you.</p>
              </div>
            </div>
          </AnimatedElement>
        </li>
        <li>
          <AnimatedElement client:visible animationType="slideInLeft" duration={1}>
            <div class="flex items-center gap-x-6">
              <Image
                src={sleepy}
                alt="Mainloot"
                format="webp"
                loading="lazy"
                class="h-24 w-24 rounded-full border-4 border-red-600"
              />
              <div>
                <h3 class="text-xl font-semibold leading-7 tracking-tight text-gray-400">xSleepyo</h3>
                <p class="text-sm font-bold leading-6 text-red-600">Moderator</p>
                <p class="text-sm font-mono leading-6 text-white">Hemp Shop at Outpost, Come stop by. Creator of our combined outpost!</p>
              </div>
            </div>
          </AnimatedElement>
        </li>
        <li>
          <AnimatedElement client:visible animationType="slideInRight" duration={1}>
            <div class="flex items-center gap-x-6">
              <Image
                src={fill}
                alt="Mainloot"
                format="webp"
                loading="lazy"
                class="h-24 w-24 rounded-full "
              />
              <div>
                <h3 class="text-xl font-semibold leading-7 tracking-tight text-gray-400">Your Name Here</h3>
                <p class="text-sm font-bold leading-6 text-red-600">Contributor</p>
                <p class="text-sm font-mono leading-6 text-white">A short cheeky bio that isn't long enough to be helpful at all</p>
              </div>
            </div>
          </AnimatedElement>
        </li>  
      </ul>
    </div>
  </div>

  <footer class="bg-black">
    <div class="mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8">
      <div class="mt-8 md:order-1 md:mt-0">
        <p class="text-center text-xs leading-5 text-gray-500">&copy; 2024 mainloot.com</p>
      </div>
    </div>
  </footer>

  <div class="flex justify-center space-x-4 sm:py-32">
    {
      prevServerId && (
        <ScrollButton
          targetId={prevServerId}
          buttonId={`${serverId}-up`}
          marginTop="mt-24"
          direction="up"
          animationDelay="0s"
        />
      )
    }
    {
      nextServerId && (
        <ScrollButton
          targetId={nextServerId}
          buttonId={`${serverId}-down`}
          marginTop="mt-24"
          direction="down"
          animationDelay="2s"
        />
      )
    }
  </div>
</div>
